{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx"],
        "moduleDirectory": ["node_modules", "src/"]
      }
    }
  },
  "import/extensions": [
    "error",
    {
      "js": "never",
      "jsx": "never"
    }
  ],
  "import/order": [
    "error",
    { "groups": [["builtin", "external", "internal"]] }
  ],
  "rules": {
    "prettier/prettier": "error"
  }
}
